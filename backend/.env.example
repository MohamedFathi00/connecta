# إعدادات قاعدة البيانات
DB_HOST=localhost
DB_PORT=5432
DB_NAME=social_platform
DB_USER=postgres
DB_PASSWORD=your_password

# إعدادات الخادم
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex

# عناوين التطبيقات
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# إعدادات Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# إعدادات البريد الإلكتروني
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@socialplatform.com

# إعدادات التخزين السحابي
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# مفاتيح الذكاء الاصطناعي
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# إعدادات التشفير
ENCRYPTION_KEY=your-encryption-key-32-characters

# إعدادات المصادقة الثنائية
TWO_FACTOR_SERVICE_NAME=Social Platform
TWO_FACTOR_ISSUER=Social Platform

# إعدادات الجلسات
SESSION_SECRET=your-session-secret

# إعدادات معدل الطلبات
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# إعدادات الملفات
MAX_FILE_SIZE=50485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg

# إعدادات التطبيق
APP_NAME=Social Platform
APP_VERSION=1.0.0
APP_DESCRIPTION=منصة تواصل اجتماعي متقدمة

# إعدادات الأمان
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
LOGIN_ATTEMPTS_LIMIT=5
LOCK_TIME=1800000

# إعدادات الإشعارات
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id

# إعدادات البث المباشر
RTMP_SERVER_URL=rtmp://localhost/live
RTMP_SERVER_KEY=your-rtmp-key

# إعدادات تحليلات الاستخدام
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# إعدادات التسجيل
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# إعدادات النسخ الاحتياطي
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# إعدادات الأداء
CACHE_TTL=3600
API_RESPONSE_TIMEOUT=30000